@model ML.AlumnoMateria
@{
    ViewBag.Title = "MateriasNoAsignadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h2>Materias</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <h5 class="text-center">Seleccione las materias que desea asignar al alumno y de clic en Asignar</h5>
        </div>
    </div>

    <div class="row">
        <h4>Asignar Materias</h4>
    </div>
    <br />

    <div class="row">

        @using (Html.BeginForm("MateriasNoAsignadas", "AlumnoMateria", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Alumno.IdAlumno, new { @class = "hidden" })
                    @Html.TextBoxFor(model => model.Alumno.IdAlumno, new { @class = "hidden from-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Alumno.Nombre)
                    @Html.TextBoxFor(model => model.Alumno.Nombre, new { @class = "form-control", disabled = "true" })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Alumno.ApellidoPaterno)
                    @Html.TextBoxFor(model => model.Alumno.ApellidoPaterno, new { @class = "form-control", disabled = "true" })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Alumno.ApellidoMaterno)
                    @Html.TextBoxFor(model => model.Alumno.ApellidoMaterno, new { @class = "form-control", disabled = "true" })
                </div>
            </div>
            <br />

            if (Model.Materia.Materias.Count > 0)
            {
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-bordered table-responsive">
                            <thead>
                                <tr class="text-center">
                                    <td class="form-group" style="display: none;">IdMateria</td>
                                    <td>Asignar</td>
                                    <td>Materia</td>
                                    <td>Costo</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ML.AlumnoMateria materia in Model.Materia.Materias)
                                {
                                    int i = 0;
                                    <tr class="text-center">
                                        <td class="form-group" style="display: none;">@materia.Materia.IdMateria</td>
                                        <td><input class="form-check-input" name="@materia.Materia.Nombre" type="checkbox" value="@materia.Materia.IdMateria"></td>
                                        <td>@materia.Materia.Nombre</td>
                                        <td>@materia.Materia.Costo</td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="alert alert-danger" role="alert">
                            El alumno ya está cursando todas las materias disponibles!!!
                        </div>
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-md-1">
                    <input type="submit" value="Asignar" class="btn btn-success">

                </div>
                <div class="col-md-1">
                    @Html.ActionLink("Regresar", "MateriaAsignada", "AlumnoMateria", htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
        }

    </div>

    

</div>